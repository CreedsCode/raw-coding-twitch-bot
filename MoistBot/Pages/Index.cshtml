@page
@model MoistBot.Pages.Index

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title></title>

    <style>
        div#main {
            display: flex;
            position: fixed;
            width: 100%;
            height: 100%;
            margin-top: 5px;
            justify-content: center;
        }

        div.card {
            display: flex;
            position: relative;
            justify-content: flex-end;
            align-items: center;
            flex-direction: column;
            width: 200px;
            height: 230px;

            font-size: 32px;
            font-weight: bold;
            font-family: "Comic Sans MS";
            color: deeppink;
            text-shadow: 0 0 2px black;

            background-image: url("https://aw-test-bucket.eu-central-1.linodeobjects.com/follow");
            background-size: cover;
            border-radius: 5px;
            box-shadow: 0 0 10px 1px hotpink;
        }

        .gif {
            position: absolute;
            left: 0;
            background-image: url("https://aw-test-bucket.eu-central-1.linodeobjects.com/bk");
            background-size: cover;
            width: 100%;
            height: 100%;
            opacity: 0.2;
        }
    </style>
</head>
<body>
<div id="main">
    @* <div class="card"> *@
    @*     <div class="gif"></div> *@
    @*     <span>TY</span> *@
    @*     <span>Followed</span> *@
    @* </div> *@
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/3.1.3/signalr.min.js"></script>
<script>
const connection = new signalR.HubConnectionBuilder()
    .withUrl("/hub/twitch")
    .configureLogging(signalR.LogLevel.Information)
    .build();

async function start() {
    try {
        await connection.start();
    } catch (err) {
        console.log(err);
        setTimeout(() => start(), 5000);
    }
}

connection.onclose(async () => {
    await start();
});

connection.on("follow", (username) => {
    const div = document.createElement("div");
    const gif = document.createElement("div");
    gif.classList.add('gif')
    const user = document.createElement("span")
    user.textContent = username;
    const follow = document.createElement("span")
    follow.textContent = "Followed!";

    div.classList.add("card")
    div.append(user)
    div.append(follow)
    div.append(gif)

    document.getElementById("main").appendChild(div);

    setTimeout(function(){
        div.remove();
    }, 8000)
});

start();

</script>

</body>
</html>